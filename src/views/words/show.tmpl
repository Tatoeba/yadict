<%c++ #include "contents/words.h" %>
<% skin %>
<% view words_show uses contents::Words extends master %>
<% template title() %><% gt "Word show"  %><% end template %>

<% template main_content() %>
    <div class="module">
        <% c++ if(content.fetcher->items[0] != NULL) { %>
            <% c++ out() << content.fetcher->items[0]->str ;%> 
        <% c++ } else { %>
            this word does not exist
        <% c++ } %>
        <% c++ tato_hyper_item_fetcher_free(content.fetcher); %>
    </div>
    <div class="module">
        <a href="<% url "/words/show-random"%>" >browse random</a>
        <a href="<% url "" %>" >back to homepage</a>
    </div>
<% end %>


<% end view %>
<% end skin %>
